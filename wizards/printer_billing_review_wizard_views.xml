<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree para Líneas -->
    <record id="view_printer_billing_review_line_tree" model="ir.ui.view">
        <field name="name">printer.billing.review.line.tree</field>
        <field name="model">printer.billing.review.line</field>
        <field name="arch" type="xml">
            <tree string="Impresoras para Facturación" editable="bottom" decoration-muted="not include_in_invoice">
                <field name="include_in_invoice" widget="boolean_toggle"/>
                <field name="printer_name"/>
                <field name="location_name"/>
                <field name="counter_start"/>
                <field name="counter_end"/>
                <field name="total_pages" sum="Total"/>
                <field name="mono_start"/>
                <field name="mono_end"/>
                <field name="mono_pages" sum="Total Mono"/>
                <field name="color_start"/>
                <field name="color_end"/>
                <field name="color_pages" sum="Total Color"/>
                <field name="notes"/>
                <field name="printer_id" invisible="1"/>
                <field name="location_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form del Wizard de Revisión -->
    <record id="view_printer_billing_review_wizard_form" model="ir.ui.view">
        <field name="name">printer.billing.review.wizard.form</field>
        <field name="model">printer.billing.review.wizard</field>
        <field name="arch" type="xml">
            <form string="Revisar Facturación">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <span>Revisión de Facturación</span>
                        </h1>
                    </div>
                    <group>
                        <group string="Información del Cliente">
                            <field name="partner_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group string="Configuración">
                            <field name="product_id" options="{'no_create': True}"/>
                            <field name="group_by_location"/>
                            <field name="only_not_billed"/>
                        </group>
                    </group>

                    <group>
                        <group string="Totales">
                            <field name="total_printers" readonly="1"/>
                            <field name="total_pages_all" readonly="1"/>
                        </group>
                        <group>
                            <field name="total_mono_all" readonly="1"/>
                            <field name="total_color_all" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Impresoras" name="printers">
                            <div class="alert alert-info" role="alert">
                                <strong>Instrucciones:</strong>
                                <ul>
                                    <li>Revise y edite los contadores inicial y final de cada impresora</li>
                                    <li>Los totales se calcularán automáticamente</li>
                                    <li>Desmarque "Incluir en Factura" para excluir impresoras</li>
                                    <li>Agregue notas si es necesario</li>
                                </ul>
                            </div>
                            <field name="line_ids" widget="one2many" mode="tree">
                                <tree string="Impresoras" editable="bottom" decoration-muted="not include_in_invoice">
                                    <field name="include_in_invoice" widget="boolean_toggle"/>
                                    <field name="printer_name"/>
                                    <field name="location_name"/>
                                    <field name="counter_start"/>
                                    <field name="counter_end"/>
                                    <field name="total_pages" sum="Total"/>
                                    <field name="mono_start"/>
                                    <field name="mono_end"/>
                                    <field name="mono_pages" sum="Total Mono"/>
                                    <field name="color_start"/>
                                    <field name="color_end"/>
                                    <field name="color_pages" sum="Total Color"/>
                                    <field name="notes"/>
                                    <field name="printer_id" invisible="1"/>
                                    <field name="location_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Recalcular Todos" name="action_recalculate_all" type="object" class="btn-secondary"/>
                    <button string="Generar Factura" name="action_generate_invoice" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action del Wizard de Revisión -->
    <record id="action_printer_billing_review_wizard" model="ir.actions.act_window">
        <field name="name">Revisar Facturación</field>
        <field name="res_model">printer.billing.review.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
