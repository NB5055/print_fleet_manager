<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista del Wizard -->
    <record id="view_printer_billing_wizard_form" model="ir.ui.view">
        <field name="name">printer.billing.wizard.form</field>
        <field name="model">printer.billing.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Factura de Impresi贸n">
                <group>
                    <group string="Selecci贸n">
                        <field name="partner_id" options="{'no_create': True}"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group string="Opciones">
                        <field name="group_by_location"/>
                        <field name="only_not_billed"/>
                    </group>
                </group>
                <group string="Previsualizaci贸n" invisible="not partner_id">
                    <group>
                        <field name="total_printers" readonly="1"/>
                        <field name="total_pages" readonly="1"/>
                    </group>
                    <group>
                        <field name="location_ids" widget="many2many_tags" readonly="1"/>
                    </group>
                </group>
                <footer>
                    <button string="Generar Factura" name="action_generate_invoice" type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action del Wizard -->
    <record id="action_printer_billing_wizard" model="ir.actions.act_window">
        <field name="name">Generar Factura de Impresi贸n</field>
        <field name="res_model">printer.billing.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Reporte de Uso -->
    <record id="action_printer_usage_report" model="ir.actions.act_window">
        <field name="name">Reporte de Uso</field>
        <field name="res_model">printer.reading</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="context">{
            'search_default_group_partner': 1,
            'search_default_group_period': 1,
            'search_default_this_month': 1
        }</field>
    </record>

</odoo>
