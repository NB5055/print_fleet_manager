<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree -->
    <record id="view_printer_device_tree" model="ir.ui.view">
        <field name="name">printer.device.tree</field>
        <field name="model">printer.device</field>
        <field name="arch" type="xml">
            <tree string="Impresoras" decoration-muted="not is_active" decoration-danger="status == 'error'" decoration-success="status == 'online'">
                <field name="name"/>
                <field name="location_id"/>
                <field name="partner_id"/>
                <field name="ip_address"/>
                <field name="model"/>
                <field name="manufacturer"/>
                <field name="status"/>
                <field name="total_pages"/>
                <field name="active_alerts_count" decoration-danger="active_alerts_count > 0"/>
                <field name="last_reading"/>
                <field name="is_active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_printer_device_kanban" model="ir.ui.view">
        <field name="name">printer.device.kanban</field>
        <field name="model">printer.device</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="location_id"/>
                <field name="partner_id"/>
                <field name="ip_address"/>
                <field name="model"/>
                <field name="manufacturer"/>
                <field name="status"/>
                <field name="is_active"/>
                <field name="total_pages"/>
                <field name="mono_pages"/>
                <field name="color_pages"/>
                <field name="active_alerts_count"/>
                <field name="last_reading"/>
                <field name="last_seen"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" t-attf-class="{{record.status.raw_value == 'offline' ? 'oe_kanban_color_2' : record.status.raw_value == 'error' ? 'oe_kanban_color_1' : ''}}">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="o_secondary text-muted">
                                        <i class="fa fa-map-marker"/> <field name="location_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                    <div class="o_kanban_card_manage_section o_kanban_manage_reports">
                                        <div role="menuitem">
                                            <a type="object" name="action_view_readings">Ver Lecturas</a>
                                        </div>
                                        <div role="menuitem">
                                            <a type="object" name="action_view_consumables">Ver Consumibles</a>
                                        </div>
                                        <div role="menuitem">
                                            <a type="object" name="action_view_alerts">Ver Alertas</a>
                                        </div>
                                    </div>
                                    <div t-if="widget.editable" class="o_kanban_card_manage_section o_kanban_manage_new">
                                        <div role="menuitem">
                                            <a type="edit">Editar</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-12">
                                        <!-- Status Badge -->
                                        <span t-if="record.status.raw_value == 'online'" class="badge badge-success">
                                            <i class="fa fa-circle"/> En Línea
                                        </span>
                                        <span t-elif="record.status.raw_value == 'offline'" class="badge badge-secondary">
                                            <i class="fa fa-circle-o"/> Fuera de Línea
                                        </span>
                                        <span t-elif="record.status.raw_value == 'error'" class="badge badge-danger">
                                            <i class="fa fa-exclamation-circle"/> Error
                                        </span>
                                        <span t-elif="record.status.raw_value == 'maintenance'" class="badge badge-warning">
                                            <i class="fa fa-wrench"/> Mantenimiento
                                        </span>
                                        <span t-else="" class="badge badge-secondary">
                                            <i class="fa fa-question-circle"/> Desconocido
                                        </span>

                                        <!-- Alert Badge -->
                                        <span t-if="record.active_alerts_count.raw_value &gt; 0" class="badge badge-danger ml-2">
                                            <i class="fa fa-bell"/> <field name="active_alerts_count"/> alertas
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <div class="text-muted">
                                            <i class="fa fa-laptop"/> <field name="model"/> - <field name="manufacturer"/>
                                        </div>
                                        <div class="text-muted">
                                            <i class="fa fa-network-wired"/> <field name="ip_address"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <div class="o_kanban_tags_section"></div>
                                    </div>
                                </div>
                                <!-- Counters Section -->
                                <div class="row mt-3" t-if="record.total_pages.raw_value > 0">
                                    <div class="col-12">
                                        <strong>Contadores:</strong>
                                        <div class="progress mt-1" style="height: 20px;">
                                            <div class="progress-bar bg-secondary" role="progressbar"
                                                 t-att-style="'width: ' + (record.mono_pages.raw_value / record.total_pages.raw_value * 100) + '%'"
                                                 t-att-aria-valuenow="record.mono_pages.raw_value"
                                                 aria-valuemin="0"
                                                 t-att-aria-valuemax="record.total_pages.raw_value">
                                                <small><field name="mono_pages"/> mono</small>
                                            </div>
                                            <div class="progress-bar bg-info" role="progressbar"
                                                 t-att-style="'width: ' + (record.color_pages.raw_value / record.total_pages.raw_value * 100) + '%'"
                                                 t-att-aria-valuenow="record.color_pages.raw_value"
                                                 aria-valuemin="0"
                                                 t-att-aria-valuemax="record.total_pages.raw_value">
                                                <small><field name="color_pages"/> color</small>
                                            </div>
                                        </div>
                                        <div class="text-center mt-1">
                                            <strong><field name="total_pages"/> páginas totales</strong>
                                        </div>
                                    </div>
                                </div>
                                <!-- Last Update -->
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <div class="text-muted small">
                                            <i class="fa fa-clock-o"/> Última lectura: <field name="last_reading"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_printer_device_form" model="ir.ui.view">
        <field name="name">printer.device.form</field>
        <field name="model">printer.device</field>
        <field name="arch" type="xml">
            <form string="Impresora">
                <header>
                    <button name="action_view_readings" string="Ver Lecturas" type="object" class="btn-primary"/>
                    <button name="action_view_consumables" string="Ver Consumibles" type="object"/>
                    <button name="action_view_alerts" string="Ver Alertas" type="object"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_readings" type="object" class="oe_stat_button" icon="fa-line-chart">
                            <field name="total_pages" widget="statinfo" string="Total Páginas"/>
                        </button>
                        <button name="action_view_alerts" type="object" class="oe_stat_button" icon="fa-exclamation-triangle">
                            <field name="active_alerts_count" widget="statinfo" string="Alertas Activas"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Inactiva" bg_color="bg-danger" invisible="is_active"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Nombre de la impresora..."/></h1>
                    </div>
                    <group>
                        <group name="main" string="Información Principal">
                            <field name="location_id" options="{'no_create': True}"/>
                            <field name="partner_id"/>
                            <field name="ip_address"/>
                            <field name="serial_number"/>
                            <field name="model"/>
                            <field name="manufacturer"/>
                            <field name="hostname"/>
                        </group>
                        <group name="status" string="Estado">
                            <field name="is_active" widget="boolean_toggle"/>
                            <field name="last_seen"/>
                            <field name="last_reading"/>
                            <field name="sync_status"/>
                            <field name="last_sync"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contadores" name="counters">
                            <group>
                                <group string="Páginas">
                                    <field name="total_pages"/>
                                    <field name="mono_pages"/>
                                    <field name="color_pages"/>
                                </group>
                                <group string="SNMP">
                                    <field name="community_string" password="True"/>
                                    <field name="snmp_version"/>
                                </group>
                            </group>
                        </page>
                        <page string="Ubicación" name="location">
                            <group>
                                <field name="location"/>
                                <field name="department"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Search -->
    <record id="view_printer_device_search" model="ir.ui.view">
        <field name="name">printer.device.search</field>
        <field name="model">printer.device</field>
        <field name="arch" type="xml">
            <search string="Buscar Impresoras">
                <field name="name"/>
                <field name="ip_address"/>
                <field name="serial_number"/>
                <field name="location_id"/>
                <field name="partner_id"/>
                <filter string="Activas" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="En Línea" name="online" domain="[('status', '=', 'online')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Ubicación" name="group_location" context="{'group_by': 'location_id'}"/>
                    <filter string="Cliente" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Fabricante" name="group_manufacturer" context="{'group_by': 'manufacturer'}"/>
                    <filter string="Estado" name="group_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_printer_device" model="ir.actions.act_window">
        <field name="name">Impresoras</field>
        <field name="res_model">printer.device</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay impresoras registradas
            </p>
            <p>
                Las impresoras se sincronizan automáticamente desde el PrintServer.
                Configure el PrintServer en cada ubicación con su token correspondiente.
            </p>
        </field>
    </record>

</odoo>
