<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree de Ubicaciones -->
    <record id="view_printer_location_tree" model="ir.ui.view">
        <field name="name">printer.location.tree</field>
        <field name="model">printer.location</field>
        <field name="arch" type="xml">
            <tree string="Ubicaciones de Impresoras" decoration-muted="not is_active">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="printer_count"/>
                <field name="active_printer_count"/>
                <field name="total_pages_month"/>
                <field name="token_active" widget="boolean_toggle"/>
                <field name="last_sync"/>
                <field name="sync_status" decoration-success="sync_status == 'success'" decoration-danger="sync_status == 'error'"/>
                <field name="is_active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vista Kanban de Ubicaciones -->
    <record id="view_printer_location_kanban" model="ir.ui.view">
        <field name="name">printer.location.kanban</field>
        <field name="model">printer.location</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="printer_count"/>
                <field name="active_printer_count"/>
                <field name="total_pages_month"/>
                <field name="token_active"/>
                <field name="last_sync"/>
                <field name="sync_status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <div class="o_kanban_record_subtitle">
                                        <i class="fa fa-building-o"/> <field name="partner_id"/>
                                    </div>
                                </div>
                                <span t-if="record.token_active.raw_value" class="badge badge-success">Token Activo</span>
                                <span t-else="" class="badge badge-danger">Token Inactivo</span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <i class="fa fa-print"/> <field name="printer_count"/> impresoras
                                    </div>
                                    <div class="col-6">
                                        <i class="fa fa-file-o"/> <field name="total_pages_month"/> pág/mes
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <i class="fa fa-clock-o"/> <field name="last_sync" widget="relative"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span t-if="record.sync_status.raw_value == 'success'" class="badge badge-pill badge-success">
                                        <i class="fa fa-check"/> Sincronizado
                                    </span>
                                    <span t-elif="record.sync_status.raw_value == 'error'" class="badge badge-pill badge-danger">
                                        <i class="fa fa-exclamation-triangle"/> Error
                                    </span>
                                    <span t-else="" class="badge badge-pill badge-secondary">
                                        <i class="fa fa-question"/> Sin sincronizar
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Form de Ubicaciones -->
    <record id="view_printer_location_form" model="ir.ui.view">
        <field name="name">printer.location.form</field>
        <field name="model">printer.location</field>
        <field name="arch" type="xml">
            <form string="Ubicación de Impresoras">
                <header>
                    <button name="action_generate_token" string="Generar Nuevo Token" type="object" class="oe_highlight" attrs="{'invisible': [('access_token', '!=', False)]}"/>
                    <button name="action_generate_token" string="Regenerar Token" type="object" confirm="¿Está seguro de regenerar el token? El token actual dejará de funcionar."/>
                    <button name="action_activate_token" string="Activar Token" type="object" attrs="{'invisible': [('token_active', '=', True)]}" class="btn-success"/>
                    <button name="action_deactivate_token" string="Desactivar Token" type="object" attrs="{'invisible': [('token_active', '=', False)]}" class="btn-warning" confirm="¿Está seguro de desactivar el token? El PrintServer no podrá enviar datos."/>
                    <button name="action_view_printers" string="Ver Impresoras" type="object" class="btn-primary"/>
                    <field name="sync_status" widget="statusbar" statusbar_visible="never,success,error"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_printers" type="object" class="oe_stat_button" icon="fa-print">
                            <field name="printer_count" widget="statinfo" string="Impresoras"/>
                        </button>
                        <button name="action_view_usage_report" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="total_pages_month"/></span>
                                <span class="o_stat_text">Páginas Este Mes</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Inactiva" bg_color="bg-danger" attrs="{'invisible': [('is_active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="ej: Oficina Central, Sucursal Norte..."/>
                        </h1>
                    </div>
                    <group>
                        <group name="main_info" string="Información Principal">
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="is_active" widget="boolean_toggle"/>
                            <field name="description" placeholder="Descripción de la ubicación..."/>
                        </group>
                        <group name="address" string="Dirección">
                            <field name="street" placeholder="Calle..."/>
                            <field name="street2" placeholder="Calle 2..."/>
                            <field name="city" placeholder="Ciudad..."/>
                            <field name="state_id" options="{'no_create': True}"/>
                            <field name="zip" placeholder="Código Postal..."/>
                            <field name="country_id" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Token de Acceso" name="token">
                            <group>
                                <group string="Configuración del Token">
                                    <field name="access_token" password="True" attrs="{'invisible': [('access_token', '=', False)]}"/>
                                    <field name="token_active" widget="boolean_toggle"/>
                                    <field name="token_created_date"/>
                                    <field name="token_last_used"/>
                                    <field name="token_requests_count"/>
                                </group>
                                <group string="Instrucciones de Configuración">
                                    <div colspan="2" class="alert alert-info" role="alert">
                                        <h4>Cómo configurar el PrintServer:</h4>
                                        <ol>
                                            <li>Copie el token de acceso (haga clic en el ícono del ojo)</li>
                                            <li>En el servidor PrintServer, configure la variable de entorno:
                                                <code>ODOO_LOCATION_TOKEN=&lt;token&gt;</code>
                                            </li>
                                            <li>Reinicie el servicio PrintServer</li>
                                            <li>Verifique la sincronización en el campo "Última Sincronización"</li>
                                        </ol>
                                        <p><strong>Nota:</strong> Este token es único para esta ubicación y permite enviar datos de todas las impresoras en esta ubicación.</p>
                                    </div>
                                </group>
                            </group>
                        </page>

                        <page string="Impresoras" name="printers">
                            <field name="printer_ids" context="{'default_location_id': active_id}">
                                <tree decoration-muted="not is_active">
                                    <field name="name"/>
                                    <field name="ip_address"/>
                                    <field name="model"/>
                                    <field name="status"/>
                                    <field name="total_pages"/>
                                    <field name="last_reading"/>
                                    <field name="is_active" invisible="1"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Estadísticas" name="stats">
                            <group>
                                <group string="Impresoras">
                                    <field name="printer_count"/>
                                    <field name="active_printer_count"/>
                                </group>
                                <group string="Uso Mensual">
                                    <field name="total_pages_month"/>
                                    <field name="mono_pages_month"/>
                                    <field name="color_pages_month"/>
                                </group>
                            </group>
                            <group>
                                <group string="Sincronización">
                                    <field name="last_sync"/>
                                    <field name="sync_status"/>
                                </group>
                            </group>
                        </page>

                        <page string="Notas" name="notes">
                            <field name="notes" placeholder="Notas internas sobre esta ubicación..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Search de Ubicaciones -->
    <record id="view_printer_location_search" model="ir.ui.view">
        <field name="name">printer.location.search</field>
        <field name="model">printer.location</field>
        <field name="arch" type="xml">
            <search string="Buscar Ubicaciones">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="city"/>
                <filter string="Activas" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Inactivas" name="inactive" domain="[('is_active', '=', False)]"/>
                <separator/>
                <filter string="Token Activo" name="token_active" domain="[('token_active', '=', True)]"/>
                <filter string="Token Inactivo" name="token_inactive" domain="[('token_active', '=', False)]"/>
                <separator/>
                <filter string="Sincronización OK" name="sync_success" domain="[('sync_status', '=', 'success')]"/>
                <filter string="Error de Sincronización" name="sync_error" domain="[('sync_status', '=', 'error')]"/>
                <filter string="Sin Sincronizar" name="sync_never" domain="[('sync_status', '=', 'never')]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Cliente" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Estado" name="group_sync_status" context="{'group_by': 'sync_status'}"/>
                    <filter string="Ciudad" name="group_city" context="{'group_by': 'city'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action para Ubicaciones -->
    <record id="action_printer_location" model="ir.actions.act_window">
        <field name="name">Ubicaciones</field>
        <field name="res_model">printer.location</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1, 'search_default_token_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva ubicación
            </p>
            <p>
                Las ubicaciones agrupan las impresoras por ubicación física.
                Cada ubicación tiene un token único que permite al PrintServer
                enviar datos de todas las impresoras en esa ubicación.
            </p>
        </field>
    </record>

</odoo>
